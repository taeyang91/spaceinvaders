        		alert("<--: move left\n-->: move right\nup: fire missile");
        	})
            $(".start").click(function() {
                game = new Game();
                game.setup();
            })
            $(".pause").click(function() {
            
            if (game.status == "pause") {
                game.status = "playing";
                $(this).html("Pause");
            } else if (game.status == "playing"){
                game.status = "pause";
                $(this).html("Resume");
            }
          })
        });
